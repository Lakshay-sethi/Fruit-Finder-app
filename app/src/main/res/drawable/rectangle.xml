<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="#000000"/>
                    <corners
                        android:radius="5dp"/>
                </shape>
            </item>
            <item android:left="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="#DAB691"/>
                    <corners
                        android:radius="5dp"/>
                    <stroke
                        android:color="#3C2813"
                        android:width="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="#DAB691"/>
                    <corners
                        android:radius="5dp"/>
                    <padding
                        android:left="8dp"
                        android:right="8dp"/>
                    <stroke
                        android:color="#3C2813"
                        android:width="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>