<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garden_rose"
    tools:context=".OptionActivity">

    <ImageView
        android:id="@+id/optionView1"
        android:layout_width="306dp"
        android:layout_height="190dp"
        android:contentDescription="@string/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.773"
        app:srcCompat="@drawable/options_man" />

    <TextView
        android:id="@+id/textOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/atma_medium"
        android:text="@string/optionHeading"
        android:textColor="#0B0B0B"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/optionView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:text="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_background"
        android:text="@string/resetString"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgBtnFruit"
        android:layout_width="104dp"
        android:layout_height="90dp"
        android:layout_marginEnd="220dp"
        android:background="@drawable/button_background"
        android:contentDescription="@string/imageView"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/optionView1"
        app:layout_constraintEnd_toEndOf="@+id/optionView1"
        app:layout_constraintTop_toBottomOf="@+id/textOption"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/watermelon" />

    <ImageButton
        android:id="@+id/imgBtnVegetable"
        android:layout_width="104dp"
        android:layout_height="90dp"
        android:layout_marginStart="224dp"
        android:background="@drawable/button_background"
        android:contentDescription="@string/imageView"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/optionView1"
        app:layout_constraintStart_toStartOf="@+id/optionView1"
        app:layout_constraintTop_toBottomOf="@+id/textOption"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/broccoli" />

</androidx.constraintlayout.widget.ConstraintLayout>