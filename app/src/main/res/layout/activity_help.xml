<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".UI.HelpActivity"
android:background="@drawable/help_screen">


    <TextView
        android:id="@+id/textHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="300dp"
        android:alpha="1"
        android:lineSpacingExtra="18sp"
        android:text="@string/helpTitle"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#0E0E0E"
        android:textSize="46sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnBack"
        android:layout_width="79dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="335dp"
        android:background="@drawable/rectangle"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHelp"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textBox"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="61dp"
            android:autoLink="all"
            android:background="#FFFFFF"
            android:backgroundTint="#02EF9D23"
            android:clickable="true"
            android:text="@string/helpContent"
            android:textColor="#131313"
            android:textSize="18sp"
            android:textStyle="bold"
            android:focusable="true" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>